{
  "id": "es",
  "container": {
    "docker": {
      "image": "elasticsearch:latest",
      "network": "HOST",
      "privileged": true,
      "parameters": [
          { "key": "ulimit", "value": "memlock=-1:-1" },
          { "key": "cap-add","value": "IPC_LOCK"}
      ]
    }
  },
  "args": ["-Des.bootstrap.mlockall=true","-Dcluster.name=es-docker", "-Ddiscovery.zen.ping.unicast.hosts=es.marathon.mesos","-Ddiscovery.zen.minimum_master_nodes=2"],
  "cpus": 10,
  "mem": 24576,
  "env": {
	  "ES_HEAP_SIZE":"12g",
	  "MAX_LOCK_MEMORY":"unlimited",
	  "MAX_OPEN_FILES":"131070"
  },
  "instances": 4,
  "constraints": [["hostname", "UNIQUE"]]
} 